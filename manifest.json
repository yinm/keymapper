{
  "manifest_version": 3,
  "name": "keymapper",
  "description": "Set hotkeys",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "version": "0.9.1",
  "options_page": "index.html",
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/content/index.ts"],
      "run_at": "document_start",
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "permissions": ["storage"]
}
