{
  "manifest_version": 3,
  "name": "keymapper",
  "description": "Set hotkeys",
  "version": "0.9.0",
  "options_page": "index.html",
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/content/index.ts"],
      "run_at": "document_start",
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "permissions": ["storage"]
}
